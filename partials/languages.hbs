{{#if resume.languages.length}}
	<section class="section-languages">
		{{>title title='Languages'}}
		<ul class="languages">
			{{#each resume.languages}}
				<li class="item">
					{{#if language}}
						<div class="language">
							{{language}}
							{{#if fluency}}
								<span class="fluency">
									| {{fluency}}
								</span>
							{{/if}}
						</div>
					{{/if}}
				</li>
			{{/each}}
		</ul>
	</section>
{{/if}}
